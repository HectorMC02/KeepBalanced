<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_marker"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/tv_marker_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="11sp"
            android:gravity="center"
            android:text="@string/_12_nov" />

        <TextView
            android:id="@+id/tv_marker_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/_10_000" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="4dp"/>

    <View
        android:id="@+id/view_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_dot" />

</LinearLayout>